<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.farm.dinh">

    <application
        android:name="com.farm.dinh.TTApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.farm.dinh.SplashScreenActivity"
            android:theme="@style/SplashscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.farm.dinh.ui.login.LoginActivity"
            android:label="@string/title_login"></activity>

        <activity
            android:name="com.farm.dinh.ui.main.MainActivity"
            android:label="@string/title_main"></activity>

    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>